<div class="span2">
	<h3>Methods</h3>
	<% @rclass.rmethods.each do |x| %>
	<% end_index = x.name.index("=>") %>
	<% end_index = 30 unless end_index %>
	<a href="#"><%= x.name[(x.name.index("#")+1)..(end_index -2) ] %></a><br>
	<% end %>
</div>
<div class="span8">
	<legend><h2><%= @rclass.name %></h2></legend>
	<% @rclass.rmethods.each do |rmethod| %>
	<p><%= rmethod.name %>
		<% if rmethod.label %>
		<div style="color:grey;"><%=rmethod.label%></div>
		<%end%>
	</p>
	<%end%>
</div>